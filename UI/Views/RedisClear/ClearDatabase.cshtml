@using Core
@model RedisClearDatabaseViewModel

<div class="card-dark mt-4">
        <h3 class="mb-3">Clear Entire Redis Database</h3>

        <form method="post" class="row g-3">

            <div class="col-md-3">
                <label class="form-label">Database Number</label>
                <input asp-for="DatabaseNumber" class="form-control bg-secondary text-light" />
            </div>

          
            <div class="col-12 mt-3">
            <button class="btn btn-success w-100 mt-3">Generate Script</button>
            </div>
        </form>


        @await Html.PartialAsync("_ScriptResult", Model)
    
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />


}